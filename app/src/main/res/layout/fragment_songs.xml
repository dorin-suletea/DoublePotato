<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ListView
        android:id="@+id/songs_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transcriptMode="normal"
        android:layout_weight="1"></ListView>

    <LinearLayout
        android:id="@+id/media_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/previous_song_btn"
            style="@style/playback_button_style"
            android:background="@drawable/rewind_btn" />

        <Button
            android:id="@+id/pause_btn"
            style="@style/playback_button_style"
            android:background="@drawable/pause_btn" />

        <Button
            android:id="@+id/resume_btn"
            style="@style/playback_button_style"
            android:background="@drawable/play_button"
            android:visibility="gone" />

        <Button
            android:id="@+id/next_song_btn"
            style="@style/playback_button_style"

            android:background="@drawable/unwind_btn" />
    </LinearLayout>

</LinearLayout>
